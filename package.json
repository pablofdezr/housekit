{
  "name": "housekit-monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": "Pablo Fernandez Ruiz",
  "license": "MIT",
  "workspaces": [
    "packages/orm",
    "packages/kit",
    "apps/*"
  ],
  "packageManager": "bun@1.0.0",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "build:packages": "turbo run build --filter=@housekit/orm --filter=@housekit/kit",
    "release": "node scripts/release.cjs",
    "release:prepare": "node scripts/bump-changed-versions.cjs",
    "release:publish": "node scripts/publish-if-new.cjs",
    "release:orm": "node scripts/release.cjs --orm",
    "release:kit": "node scripts/release.cjs --kit",
    "release:all": "node scripts/bump-changed-versions.cjs && bun run build:packages && node scripts/publish-changed.cjs"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "turbo": "^2.7.2",
    "typescript": "^5.0.0"
  }
}